{
  "typeRoots": [
      "./node_module/@types",
      "./src/types"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "baseUrl": "src",
    "paths": {
      "@lib/*": ["lib/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
  },
  "include": ["src/**/*", "scripts"],
  "exclude": ["node_modules"]
}
